{ 
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true 
    },
    "paths": {
        "@css/*": ["./css/*"],
        "@html/*": ["./html/*"]
    },
    "exclude": [ "node_modules" ] 
  }